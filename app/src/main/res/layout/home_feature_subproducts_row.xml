<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FeaturedProducts_Row"
    android:layout_width="@dimen/home_product_row_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:background="@color/white_color"

    app:cardCornerRadius="7dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:indeterminateDrawable="@drawable/com_progress_big" />
            <ImageView


                android:id="@+id/FeaturedProducts_Row_Image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_product_row_image_height"
                android:scaleType="fitCenter"


                />
            </RelativeLayout>
            <com.mohi.in.widgets.UbuntuMediumTextView
                android:id="@+id/FeaturedProducts_Row_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center"
               android:singleLine="true"
                android:text="Vinay Blossom 1861"
                android:textColor="@color/back_color"
                android:textSize="@dimen/home_allproduct_row_title_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:padding="1dp">

                <com.mohi.in.widgets.UbuntuMediumTextView
                    android:id="@+id/FeaturedProducts_Row_Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="129.00"
                    android:textColor="@color/price_color"
                    android:textSize="@dimen/home_seeall_text_size" />

                <com.mohi.in.widgets.UbuntuMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:id="@+id/FeaturedProducts_Row_CurrencyType"
                    android:gravity="center"
                    android:text=" AED"
                    android:textColor="@color/price_aed_color"
                    android:textSize="@dimen/home_product_row_currency_text_size" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/silver_bg_color"
                />
            <LinearLayout
                android:id="@+id/FeaturedProducts_Row_FavoriteAddTOcard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_allproduct_row_like_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:background="@color/favorite_color"
                    android:clickable="true"
                    android:gravity="center"
                    app:mrl_rippleBackground="@android:color/transparent"
                    app:mrl_rippleColor="@color/colorTransButtonPressed"
                    app:mrl_rippleDuration="200"
                    app:mrl_rippleFadeDuration="75"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <ImageView
                        android:id="@+id/FeaturedProducts_Row_Favorite"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/like_active_large"

                        />

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".7"
                    android:background="@color/termsandcondition_color"
                    android:clickable="true"
                    android:gravity="center"
                    app:mrl_rippleBackground="@android:color/transparent"
                    app:mrl_rippleColor="@color/colorTransButtonPressed"
                    app:mrl_rippleDuration="200"
                    app:mrl_rippleFadeDuration="75"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/FeaturedProducts_Row_AddToCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/online_shopping_cart"

                            />

                        <com.mohi.in.widgets.UbuntuRegularTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="Add to Cart"

                            android:textColor="@color/white_color"
                            android:textSize="@dimen/home_product_row_atc_text_size" />
                    </LinearLayout>


                </com.balysv.materialripple.MaterialRippleLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>


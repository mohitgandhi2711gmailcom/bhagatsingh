<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddAddressActivity">

    <include
        layout="@layout/header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >



            <com.mohi.in.widgets.UbuntuRegularEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddAddress_Name"
                android:singleLine="true"
                android:textSize="@dimen/product_detail_currency_text_size"
                android:background="@drawable/writereview_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="@string/full_name"
                android:inputType="textNoSuggestions|textCapWords"
                android:textColorHint="@color/forgotpassword_text"
                android:textColor="@color/back_color"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <com.mohi.in.widgets.UbuntuRegularEditText
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddAddress_PhoneNo"
                    android:singleLine="true"
                    android:textSize="@dimen/product_detail_currency_text_size"
                    android:background="@drawable/writereview_box"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:maxLength="13"
                    android:paddingRight="10dp"
                    android:hint="@string/phone_no"
                    android:inputType="number"
                    android:textColorHint="@color/forgotpassword_text"
                    android:textColor="@color/back_color"


                    />


                <com.mohi.in.widgets.UbuntuRegularEditText
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddAddress_Pincode"
                    android:singleLine="true"
                    android:textSize="@dimen/product_detail_currency_text_size"
                    android:background="@drawable/writereview_box"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"

                    android:paddingRight="10dp"
                    android:hint="@string/pincode"
                    android:textColorHint="@color/forgotpassword_text"
                    android:textColor="@color/back_color"


                    />


            </LinearLayout>

            <com.mohi.in.widgets.UbuntuRegularEditText
                android:layout_marginTop="10dp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddAddress_FlatNo"
                android:singleLine="true"
                android:textSize="@dimen/product_detail_currency_text_size"
                android:background="@drawable/writereview_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:inputType="textNoSuggestions|textCapWords"

                android:paddingRight="10dp"
                android:hint="@string/flat_house_no_floor_building"
                android:textColorHint="@color/forgotpassword_text"
                android:textColor="@color/back_color"


                />

            <com.mohi.in.widgets.UbuntuRegularEditText
                android:layout_marginTop="10dp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddAddress_Colony"
                android:singleLine="true"
                android:textSize="@dimen/product_detail_currency_text_size"
                android:background="@drawable/writereview_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:inputType="textNoSuggestions|textCapWords"

                android:paddingRight="10dp"
                android:hint="@string/colony_street_locality"
                android:textColorHint="@color/forgotpassword_text"
                android:textColor="@color/back_color"

                />

            <com.mohi.in.widgets.UbuntuRegularEditText
                android:layout_marginTop="10dp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddAddress_Landmark"
                android:singleLine="true"
                android:textSize="@dimen/product_detail_currency_text_size"
                android:background="@drawable/writereview_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"

                android:paddingRight="10dp"
                android:hint="Landmark (Optional)"
                android:textColorHint="@color/forgotpassword_text"
                android:textColor="@color/back_color"
                android:inputType="textNoSuggestions|textCapWords"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <com.mohi.in.widgets.UbuntuRegularEditText
                    android:layout_weight="1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddAddress_City"
                    android:singleLine="true"
                    android:textSize="@dimen/product_detail_currency_text_size"
                    android:background="@drawable/writereview_box"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:hint="@string/town_city"
                    android:textColorHint="@color/forgotpassword_text"
                    android:textColor="@color/back_color"
                    android:inputType="textNoSuggestions|textCapWords"


                    />


                <com.mohi.in.widgets.UbuntuRegularEditText
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddAddress_State"
                    android:singleLine="true"
                    android:textSize="@dimen/product_detail_currency_text_size"
                    android:background="@drawable/writereview_box"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:hint="@string/state"
                    android:textColorHint="@color/forgotpassword_text"
                    android:textColor="@color/back_color"
                    android:inputType="textNoSuggestions|textCapWords"


                    />


            </LinearLayout>

            <com.mohi.in.widgets.UbuntuRegularEditText
                android:layout_marginTop="10dp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/AddAddress_CountryName"
                android:singleLine="true"
                android:textSize="@dimen/product_detail_currency_text_size"
                android:background="@drawable/writereview_box"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"

                android:paddingRight="10dp"
                android:hint="@string/country"
                android:textColorHint="@color/forgotpassword_text"
                android:textColor="@color/back_color"

                android:inputType="textNoSuggestions|textCapWords"

                />





            <com.mohi.in.widgets.UbuntuRegularButton
               android:layout_marginTop="30dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"
                android:text="@string/submit"
                android:textColor="@color/white_color"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp"
                android:id="@+id/AddAddress_Submit"


                android:textSize="@dimen/home_search_text_size"

                />


        </LinearLayout>


    </ScrollView>



</LinearLayout>

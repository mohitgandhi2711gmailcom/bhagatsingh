<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/white_color"

    android:layout_height="wrap_content"
    android:layout_margin="@dimen/home_categouries_row_mar">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/FeaturedCategory_row"
        android:layout_width="@dimen/home_categouries_row_height"


        android:layout_height="@dimen/home_categouries_row_height"


        >


        <com.mikhaellopez.circularimageview.CircularImageView

            android:id="@+id/iv_photo"
            android:layout_width="@dimen/home_categouries_row_height"
            android:layout_height="@dimen/home_categouries_row_height"



            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:background="@color/favorite_color"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="Libas Regular fit"
            android:textAllCaps="true"
            android:textColor="@color/back_color"
            android:textSize="@dimen/home_categouries_row_text_size" />

        <ImageView
            android:id="@+id/iv_photoUp"
            android:layout_width="@dimen/home_categouries_row_height"
            android:layout_height="@dimen/home_categouries_row_height"
            android:src="@drawable/image"

            />


    </FrameLayout>
</FrameLayout>

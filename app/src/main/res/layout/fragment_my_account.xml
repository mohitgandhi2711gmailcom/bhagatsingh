<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_color"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MyAccountFragment">





    <ScrollView
        android:id="@+id/MyAccount_Parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MyAccount_UserImage"
            >
            <com.mikhaellopez.circularimageview.CircularImageView

                android:layout_width="@dimen/width_size_272"
                android:layout_height="@dimen/width_size_272"
                android:layout_margin="10dp"
                android:id="@+id/MyAccount_Image"


                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_edit_colorfull"
                android:layout_gravity="bottom|right"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                />

        </FrameLayout>

        <com.mohi.in.widgets.CenturyGothicLightTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pankaj Saad"
            android:textColor="@color/termsandcondition_color"
            android:textSize="@dimen/nav_user_text_size"
            android:id="@+id/MyAccount_UserName"
            />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hint_color"
        />
    



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"


            >


            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                app:mrl_rippleBackground="@android:color/transparent"
                app:mrl_rippleColor="@color/colorTransButtonPressed"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/MyAccount_EYAI"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profile_gray"

                />
            <com.mohi.in.widgets.UbuntuLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/back_color"
                android:textSize="@dimen/product_detail_titel_text_size"
                android:text="@string/eyai"
                />

            <com.mohi.in.widgets.TextAwesome
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_angle_right"
                android:textSize="30sp"
                android:textColor="@color/back_color"

                />

        </LinearLayout>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                app:mrl_rippleBackground="@android:color/transparent"
                app:mrl_rippleColor="@color/colorTransButtonPressed"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center"
            android:id="@+id/MyAccount_CYP"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/key_gray"

                />
            <com.mohi.in.widgets.UbuntuLightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/back_color"
                android:textSize="@dimen/product_detail_titel_text_size"
                android:text="@string/change_your_password"
                />

            <com.mohi.in.widgets.TextAwesome
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_angle_right"
                android:textSize="30sp"
                android:textColor="@color/back_color"

                />

        </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                app:mrl_rippleBackground="@android:color/transparent"
                app:mrl_rippleColor="@color/colorTransButtonPressed"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:id="@+id/MyAccount_MYA"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location_gray"

                    />
                <com.mohi.in.widgets.UbuntuLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/back_color"
                    android:textSize="@dimen/product_detail_titel_text_size"
                    android:text="@string/modify_your_address"
                    />

                <com.mohi.in.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textSize="30sp"
                    android:textColor="@color/back_color"

                    />

            </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                app:mrl_rippleBackground="@android:color/transparent"
                app:mrl_rippleColor="@color/colorTransButtonPressed"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:id="@+id/MyAccount_MYWL"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/event_gray"

                    />
                <com.mohi.in.widgets.UbuntuLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/back_color"
                    android:textSize="@dimen/product_detail_titel_text_size"
                    android:text="@string/modify_yor_wishlist"
                    />

                <com.mohi.in.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textSize="30sp"
                    android:textColor="@color/back_color"

                    />

            </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                app:mrl_rippleBackground="@android:color/transparent"
                app:mrl_rippleColor="@color/colorTransButtonPressed"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/MyAccount_PushNotification"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ring_gray"

                    />
                <com.mohi.in.widgets.UbuntuLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/back_color"
                    android:textSize="@dimen/product_detail_titel_text_size"
                    android:text="@string/push_notification"
                    />


                <ToggleButton

                    android:id="@+id/MyAccount_PushNotification_ToggleButton"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/chat_toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                app:mrl_rippleBackground="@android:color/transparent"
                app:mrl_rippleColor="@color/colorTransButtonPressed"
                app:mrl_rippleDuration="200"
                app:mrl_rippleFadeDuration="75"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:id="@+id/MyAccount_Signout"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sign_out_icon"

                    />
                <com.mohi.in.widgets.UbuntuLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/back_color"
                    android:textSize="@dimen/product_detail_titel_text_size"
                    android:text="@string/signout"
                    />



            </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>


</LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/login_signup_popup"
        android:id="@+id/MyAccount_LoginSingup"
        android:visibility="gone"
        />
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_finish_parent_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_finshed_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/congratulation_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/your_order_processed_tv"
        android:layout_alignParentTop="true"
        android:gravity="bottom|center_horizontal"
        android:text="@string/congratulation_caps"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/your_order_processed_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/delivery_boy_iv"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/your_order_has_been_processed" />

    <ImageView
        android:id="@+id/delivery_boy_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:src="@drawable/delivery_boy" />

    <TextView
        android:id="@+id/our_delivery_team_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delivery_boy_iv"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/our_delivery_team_will" />

    <LinearLayout
        android:id="@+id/social_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/our_delivery_team_tv"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/instagram_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:contentDescription="@null"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/google_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/google" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Tabular_line"
        android:orientation="horizontal"
        android:layout_above="@+id/bottom_ll"
        android:layout_below="@+id/social_ll"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:weightSum="4"
        android:gravity="center"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="2dp"
            android:background="#D9DDDD" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="4dp"
            android:background="#80C5B9" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@null"
            android:src="@drawable/bt_back" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corner_shape_gradient"
            android:text="@string/continue_shopping"
            android:textAllCaps="false"
            android:textColor="@color/white_color" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_color"

    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/writereview_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/signup_tac_marbottom">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:indeterminateDrawable="@drawable/com_progress_big" />
            <ImageView
                android:id="@+id/ShippingRow_Image"
                android:layout_width="@dimen/writereview_image_width"
                android:layout_height="@dimen/writereview_image_height"
                android:scaleType="fitXY"
                />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.mohi.in.widgets.UbuntuRegularTextView
                    android:id="@+id/ShippingRow_ProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LT Nitya"
                    android:textColor="@color/writereview_name_color"
                    android:textSize="@dimen/addtocart_totalprice_size" />

                <com.mohi.in.widgets.UbuntuMediumTextView
                    android:id="@+id/ShippingRow_ProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:textColor="@color/color_F47A23"
                    android:textSize="@dimen/nav_text_size" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="1dp"
            android:background="@drawable/qty_white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <Spinner

                android:id="@+id/ShippingRow_Qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
